<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.midtrans.bank.core.model.Bank" table="bank" catalog="peacock">
        <id name="id" type="java.lang.Long" column="pk_bank">
            <generator class="identity" />
        </id>
        <property name="active" type="boolean">
            <column name="active" sql-type="TINYINT(1)" />
        </property>
        <property name="name" type="string" column="name"/>
        <property name="note" type="string" column="note"/>
        <property name="header" type="string" column="header"/>
        <property name="port" type="string" column="port"/>

        <set name="cards" table="card" inverse="true" lazy="true" fetch="join">
            <key>
                <column name="pk_bank" not-null="true"/>
            </key>
            <one-to-many class="com.midtrans.bank.core.model.Card"/>
        </set>

        <set name="transactions" table="transaction" inverse="true" lazy="true" fetch="join">
            <key>
                <column name="pk_bank" not-null="true"/>
            </key>
            <one-to-many class="com.midtrans.bank.core.model.Transaction"/>
        </set>
    </class>
</hibernate-mapping>