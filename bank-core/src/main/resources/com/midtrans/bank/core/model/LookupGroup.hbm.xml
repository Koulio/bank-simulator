<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.midtrans.bank.core.model.LookupGroup" table="lookup_group" catalog="peacock">
        <id name="id" type="java.lang.Long" column="pk_lookup_group">
            <generator class="identity" />
        </id>
        <property name="active" type="boolean">
            <column name="active" sql-type="TINYINT(1)" />
        </property>
        <property name="description" type="string">
            <column name="description" sql-type="TEXT"/>
        </property>
        <property name="editable" type="boolean">
            <column name="editable" sql-type="TINYINT(1)" />
        </property>
        <property name="name" type="string" column="name"/>
        <property name="viewable" type="boolean">
            <column name="viewable" sql-type="TINYINT(1)" />
        </property>

        <set name="lookups" table="lookup" inverse="true" lazy="true" fetch="join">
            <key>
                <column name="pk_lookup_group" not-null="true"/>
            </key>
            <one-to-many class="com.midtrans.bank.core.model.Lookup"/>
        </set>
    </class>
</hibernate-mapping>