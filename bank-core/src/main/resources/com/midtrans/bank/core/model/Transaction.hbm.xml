<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.midtrans.bank.core.model.Transaction" table="transaction" catalog="peacock">
        <id name="id" type="java.lang.Long" column="pk_transaction">
            <generator class="identity" />
        </id>
        <property name="amount" type="java.lang.Long" column="amount"/>
        <property name="mid" type="string" column="mid"/>
        <property name="tid" type="string" column="tid"/>
        <property name="traceNumber" type="java.lang.Integer">
            <column name="trace_number" sql-type="SMALLINT"/>
        </property>
        <property name="cardNumber" type="string" column="card_number"/>
        <property name="cardExpire" type="string" column="card_expire"/>
        <property name="txnTime" type="java.util.Date">
            <column name="txn_time" sql-type="DATETIME"/>
        </property>
        <property name="referenceNumber" type="string" column="reference_number" not-null="true" unique="true"/>
        <property name="responseCode" type="string" column="response_code"/>

        <many-to-one name="bank" class="com.midtrans.bank.core.model.Bank" fetch="join">
            <column name="fk_bank"/>
        </many-to-one>

        <many-to-one name="lookupOfCommandType" class="com.midtrans.bank.core.model.Lookup" fetch="join">
            <column name="fk_lookup_command_type"/>
        </many-to-one>

        <many-to-one name="lookupOfConditionType" class="com.midtrans.bank.core.model.Lookup" fetch="join">
            <column name="fk_lookup_condition_type"/>
        </many-to-one>
    </class>
</hibernate-mapping>