<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.midtrans.bank.core.model.Transaction" table="transaction" catalog="peacock">
        <id name="id" type="java.lang.Long" column="pk_transaction">
            <generator class="identity" />
        </id>
        <property name="active" type="boolean">
            <column name="active" sql-type="TINYINT(1)"/>
        </property>
        <property name="amount" type="java.lang.Long" column="amount"/>
        <many-to-one name="terminal" class="com.midtrans.bank.core.model.Terminal" fetch="join">
            <column name="fk_terminal" />
        </many-to-one>
        <property name="traceNumber" type="java.lang.Integer">
            <column name="trace_number" sql-type="SMALLINT"/>
        </property>
        <property name="cardNumber" type="string" column="card_number"/>
        <property name="cardExpire" type="string" column="card_expire"/>
        <property name="txnTime" type="java.util.Date">
            <column name="txn_time" sql-type="DATETIME"/>
        </property>
        <property name="referenceNumber" type="string" column="reference_number" not-null="true" unique="true"/>
        <property name="authorizationId" type="string" column="authorization_id"/>
        <property name="responseCode" type="string" column="response_code"/>

        <property name="voidTraceNumber" type="java.lang.Integer">
            <column name="void_trace_number" sql-type="SMALLINT"/>
        </property>
        <property name="voidAmount" type="java.lang.Long" column="void_amount"/>
        <property name="voidFlag" type="boolean">
            <column name="void_flag" sql-type="TINYINT(1)"/>
        </property>
        <property name="reversalFlag" type="boolean">
            <column name="reversal_flag" sql-type="TINYINT(1)"/>
        </property>
        <property name="batchNumber" type="string" column="batch_number"/>
    </class>
</hibernate-mapping>