<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.midtrans.bank.core.model.Card" table="card" catalog="peacock">
        <id name="id" type="java.lang.Long" column="pk_card">
            <generator class="identity" />
        </id>
        <property name="active" type="boolean">
            <column name="active" sql-type="TINYINT(1)" />
        </property>
        <property name="activatedDate" type="java.util.Date">
            <column name="actived_at" sql-type="DATETIME"/>
        </property>
        <property name="cardExpire" type="string" column="card_expire"/>
        <property name="cardNo" type="string" column="card_no"/>
        <property name="cvv" type="string" column="cvv"/>

        <many-to-one name="bank" class="com.midtrans.bank.core.model.Bank" fetch="join">
            <column name="fk_bank"/>
        </many-to-one>

        <set name="cardRules" table="card_rule" inverse="true" lazy="true" fetch="join">
            <key>
                <column name="pk_card_rule" not-null="true"/>
            </key>
            <one-to-many class="com.midtrans.bank.core.model.CardRule"/>
        </set>
    </class>
</hibernate-mapping>