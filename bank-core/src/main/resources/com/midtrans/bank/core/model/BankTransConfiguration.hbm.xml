<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.midtrans.bank.core.model.BankTransConfiguration" table="bank_trans_configuration" catalog="peacock">
        <id name="id" type="java.lang.Long" column="pk_bank_trans_conf">
            <generator class="identity" />
        </id>
        <property name="active" type="boolean">
            <column name="active" sql-type="TINYINT(1)" />
        </property>
        <property name="mti" type="string" column="mti"/>
        <property name="name" type="string" column="name"/>
        <property name="processingCode" type="string" column="processing_code"/>

        <many-to-one name="bank" class="com.midtrans.bank.core.model.Bank" fetch="join">
            <column name="fk_bank"/>
        </many-to-one>

        <many-to-one name="lookupOfCommandType" class="com.midtrans.bank.core.model.Lookup" fetch="join">
            <column name="fk_lookup_command_type"/>
        </many-to-one>

        <set name="commandTypeConditions" table="command_type_condition" inverse="true" lazy="true" fetch="join">
            <key>
                <column name="pk_comm_type_cond" not-null="true"/>
            </key>
            <one-to-many class="com.midtrans.bank.core.model.CommandTypeCondition"/>
        </set>
    </class>
</hibernate-mapping>