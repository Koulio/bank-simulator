<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.midtrans.bank.core.model.Lookup" table="lookup" catalog="peacock">
        <id name="id" type="java.lang.Long" column="pk_lookup">
            <generator class="identity" />
        </id>
        <property name="active" type="boolean">
            <column name="active" sql-type="TINYINT(1)" />
        </property>
        <property name="description" type="string">
            <column name="description" sql-type="TEXT"/>
        </property>
        <property name="editable" type="boolean">
            <column name="editable" sql-type="TINYINT(1)" />
        </property>
        <property name="name" type="string" column="name"/>
        <property name="priority" type="java.lang.Integer" column="priority"/>
        <property name="shortName" type="string" length="45" column="short_name"/>
        <property name="type" type="string" length="25" column="type"/>
        <property name="viewable" type="boolean">
            <column name="viewable" sql-type="TINYINT(1)" />
        </property>

        <many-to-one name="lookupGroup" class="com.midtrans.bank.core.model.LookupGroup" fetch="join">
            <column name="fk_lookup_group"/>
        </many-to-one>
    </class>
</hibernate-mapping>