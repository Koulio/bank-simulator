<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.midtrans.bank.core.model.CardRule" table="card_rule" catalog="peacock">
        <id name="id" type="java.lang.Long" column="pk_card_rule">
            <generator class="identity" />
        </id>
        <property name="note" type="string">
            <column name="note" sql-type="TEXT" />
        </property>

        <many-to-one name="card" class="com.midtrans.bank.core.model.Card" fetch="join">
            <column name="fk_card"/>
        </many-to-one>

        <many-to-one name="lookupOfCommandType" class="com.midtrans.bank.core.model.Lookup" fetch="join">
            <column name="fk_lookup_command_type"/>
        </many-to-one>

        <many-to-one name="lookupOfConditionType" class="com.midtrans.bank.core.model.Lookup" fetch="join">
            <column name="fk_lookup_condition_type"/>
        </many-to-one>
    </class>
</hibernate-mapping>